<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bossble.bossble.SigninSignup.Verification_code_Activity">



        <VideoView
            android:id="@+id/videoView"
            android:layout_width="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_height="fill_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bossble_full_logo_new"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:id="@+id/logo"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r100"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >



                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:textSize="20dp"
                    android:id="@+id/edv1"
                    android:cursorVisible="false"
                    />

                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_below="@id/edv1"
                    />



                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/edv1"
                    android:id="@+id/edv2"
                    android:cursorVisible="false"
                    />
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_below="@id/edv2"
                    android:layout_toRightOf="@id/edv1"
                    android:layout_marginLeft="10dp"
                    />


                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/edv2"
                    android:id="@+id/edv3"
                    android:cursorVisible="false"
                    />
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_below="@id/edv3"
                    android:layout_toRightOf="@id/edv2"
                    android:layout_marginLeft="10dp"
                    />


                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/edv3"
                    android:id="@+id/edv4"
                    android:cursorVisible="false"
                    />
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_below="@id/edv4"
                    android:layout_toRightOf="@id/edv3"
                    android:layout_marginLeft="10dp"
                    />


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/r100"
                android:text="Did not receive the verification code?"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="?actionBarSize"
                android:id="@+id/txtverify"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/txtverify"
                android:text="Resend code"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:id="@+id/txtresend"
                />



        </RelativeLayout>
    </ScrollView>


    <ImageView
        android:id="@+id/avibackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="BallPulseIndicator"
        />



</RelativeLayout>
