<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bossble.bossble.OnBoarding.Fragment_OnBoarding_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be Your Boss"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:id="@+id/txtboss"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showcase"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:id="@+id/txtshowcase"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your talent"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:layout_below="@id/txtshowcase"
        android:id="@+id/txttalent"
        />


</RelativeLayout>
