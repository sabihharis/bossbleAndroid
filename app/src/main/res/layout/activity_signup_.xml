<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bossble_full_logo_new"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:id="@+id/logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHALLENGE"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/logo"
                android:layout_marginTop="30dp"
                android:id="@+id/txtchallenge"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE WORLD!"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtchallenge"
                android:layout_marginTop="5dp"
                android:id="@+id/txtworld"
                />

            <!-- <Button
                android:layout_below="@id/txtworld"
                 android:drawableLeft="@drawable/fb_icon"
                 android:paddingLeft="10dp"
                 android:layout_marginLeft="25dp"
                 android:layout_marginRight="58dp"
                 android:layout_marginTop="80dp"
                 android:textColor="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:background="@drawable/button_curve_transparent"
                 android:text="Sign up with Facebook"
                 android:textAllCaps="false"
                 android:id="@+id/btnfb"
                 />-->
            <com.facebook.login.widget.LoginButton
                xmlns:facebook="http://schemas.android.com/apk/res-auto"
                facebook:com_facebook_login_text="Sign up with Facebook"
                android:layout_below="@id/txtworld"
                android:id="@+id/btnsignupfb"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"

                android:gravity="center_horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:paddingLeft="9dp"
                android:paddingRight="17dp"
                />
            <!--
                <com.facebook.login.widget.LoginButton
                    android:layout_width="match_parent"
                    android:layout_height="10dp"


                    />
            -->

            <TextView
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"
                android:layout_below="@id/btnsignupfb"
                android:drawableLeft="@drawable/insta_icon"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_curve_transparent"
                android:text="Sign up with Instagram            "
                android:textAllCaps="false"
                android:id="@+id/btninsta"
                />

            <TextView
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"
                android:layout_below="@id/btninsta"
                android:drawableLeft="@drawable/google_icon"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_curve_transparent"
                android:text="Sign up with Google                  "
                android:textAllCaps="false"
                android:id="@+id/btngoogle"
                />

            <TextView
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"

                android:layout_below="@id/btngoogle"
                android:drawableLeft="@drawable/email_icon"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_curve_transparent"
                android:text="Sign up with email                    "
                android:textAllCaps="false"
                android:id="@+id/btnemail"
                />

            <TextView
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"
                android:layout_below="@id/btnemail"
                android:drawableLeft="@drawable/phone_icon"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_curve_transparent"
                android:text="Sign up with phone                   "
                android:textAllCaps="false"
                android:id="@+id/btnphone"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/btnphone"
                android:layout_marginTop="?actionBarSize"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:id="@+id/l1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already a member?"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/txtmember"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="LOG IN"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/txtlogin"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/avibackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="BallPulseIndicator"
        />

</RelativeLayout>
